package com.facebook.keyframes.data;

import java.util.List;

import com.facebook.proguard.annotations.DoNotStrip;

public class ReactionsAnimationGroup {

  @DoNotStrip
  private int mGroupId;

  @DoNotStrip
  private int mParentGroup;

  @DoNotStrip
  private List<ReactionsAnimation> mAnimations;

  private ReactionsAnimation[] mSorted;

  public int getGroupId() {
    return mGroupId;
  }

  public int getParentGroup() {
    return mParentGroup;
  }

  public ReactionsAnimation[] getAnimations() {
    if (mSorted == null) {
      mSorted = new ReactionsAnimation[3];
      for (ReactionsAnimation animation : mAnimations) {
        mSorted[animation.getPropertyType().ordinal()] = animation;
      }
    }
    return mSorted;
  }
}
